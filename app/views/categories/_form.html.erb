<%= simple_form_for(@category, :html => {class: "form-horizontal"}) do |f| %>
	
	<div class="form-group">
		<label for="name" class="control-label col-sm-3">Category Name</label>
		<div class="col-sm-9">
			<%= f.input :category_name, class: 'form-control', hide_label: true %>
		</div>
	</div>

	<div class="form-group actions control-group">
		<div class="col-sm-offset-3">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>

<% end %>
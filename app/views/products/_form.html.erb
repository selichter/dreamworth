<%= simple_form_for(@product, :html => {class: "form-horizontal"}) do |f| %>
	
	<div class="form-group">
		<label for="title" class="control-label col-sm-3">Title</label>
		<div class="col-sm-9">
			<%= f.text_field :title, class: 'form-control', hide_label: true %>
		</div>
	</div>

	<div class="form-group">
		<label for="price" class="control-label col-sm-3">Price</label>
		<div class="col-sm-9">
			<%= f.text_field :price, class: 'form-control', hide_label: true %>
		</div>
	</div>
	<div class="form-group">
		<label for="description" class="control-label col-sm-3">Description</label>
		<div class="col-sm-9">
			<%= f.text_field :description, class: 'form-control', hide_label: true %>
		</div>
	</div>

	<div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image, class: "form-control"  %>
  </div>

  	<div class="form-group">
    <%= f.select :category, [['USB', 1], ['Stationary', 2], ['The Schoolyard', 3], ['Bags', 4]] %><br>



	<div class="form-group actions control-group">
		<div class="col-sm-offset-3">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>

<% end %>